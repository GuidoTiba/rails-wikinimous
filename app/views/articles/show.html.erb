<div class="article-show">
  <h1>
    <%= @article.title %>
    <%= link_to edit_article_path(@article) do %>
      <span>&#128397;</span>
    <% end %>
      <%= link_to "#{@article.id}", method: :delete, data: { confirm: "Are you sure?" } do %>
      <span>&#128465;</span>
    <% end %>
    
  </h1>
  <hr>
  <p><%= @article.content %></p>
</div>